{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es2020"],
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny": true,
  },
  "exclude": ["node_modules", "dist"]
}
